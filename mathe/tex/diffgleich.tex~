\section{Differentialgleichungen}

\begin{boxshaded}
\begin{align*}
\text{Anfangsbedingung:}\quad&\text{ Werte nur an einer Stelle vorgegeben}\\
\text{Randbedingung:}\quad&\text{ Werte an mehreren Stelle vorgegeben}
\end{align*}
\end{boxshaded}

\begin{boxleft}\bla{Lineare DG}
\end{boxleft}\begin{boxrightshaded}
\begin{align*}
y_{all}&=y_h+y_p
\end{align*}
\end{boxrightshaded}

\subsection{DG 1. Ordnung}

\begin{boxleft}\bla{Trennung der variablen}
\end{boxleft}\begin{boxrightshaded}
\begin{align*}
y'(x)&=f(x)\cdot g(y)\\
\int\frac{\diff y}{g(y)}&=\int f(x)\diff x
\end{align*}
\end{boxrightshaded}

\begin{boxleft}\bla{Lineare DG}
\end{boxleft}\begin{boxrightshaded}
\begin{align*}
y'&+f(x)\cdot g(y)=g(x)&&\text{$g(x)=0\Rightarrow$homogen}\\
y_{all}&=e^{-F(x)}\cdot\left(\int g(x)\cdot e^{F(x)}\diff x+C\right)
\end{align*}
\end{boxrightshaded}

\subsection{Lineare DG 2. Ordnung}

\begin{boxleft}\bla{Darstellung}
\end{boxleft}\begin{boxrightshaded}
\begin{align*}
a(x)\cdot y''+b(x)\cdot y'+c(x)\cdot y&=g(x)&&\text{$g(x)=0\Rightarrow$homogen}
\end{align*}
\end{boxrightshaded}


\begin{boxleft}\bla{Fundamental Lösungen}
\end{boxleft}\begin{boxrightshaded}
\begin{align*}
&a\lambda^2+b\lambda+c=0\\
&y_h=C_1 e^{\lambda_1 x}+C_2 e^{\lambda_2 x}&&\text{$\lambda_1\neq\lambda_2$}\\
&y_h=C_1 e^{\lambda_1 x}+C_2 x e^{\lambda_2 x}&&\text{$\lambda_1=\lambda_2$}\\
&y_h=C_1 e^{\alpha x}\cdot\cos{\left(\beta x\right)}+C_2  e^{\alpha x}\cdot\sin{\left(\beta x\right)}&&\text{$\lambda_{1/2}=\alpha\pm \beta\cdot j$}
\end{align*}
\end{boxrightshaded}

\begin{boxleft}\bla{Partikuläre Lösungen(Polynome)}
\des{G(x)}{Ansatz}\\
\des{g(x)}{Störglied}\\
\des{k}{Anzahl der Resonanzfälle}
\end{boxleft}\begin{boxrightshaded}
\begin{align*}
&a\lambda^2+b\lambda+c=0\\
&g(x)=b_0+b_1x+b_2x^2+\dots+b_nx^n\\
&G(x)=B_0+B_1x+B_2x^2+\dots+B_nx^n&&\text{$\lambda\neq 0$}\\
&G(x)=\left(B_0+B_1x+B_2x^2+\dots+B_nx^n\right)\cdot x^k&&\text{$\lambda = 0$}
\end{align*}
\end{boxrightshaded}

\begin{boxleft}\bla{Partikuläre Lösungen(Polynome und e)}
\des{G(x)}{Ansatz}\\
\des{g(x)}{Störglied}\\
\des{k}{Anzahl der Resonanzfälle}
\end{boxleft}\begin{boxrightshaded}
\begin{align*}
&a\lambda^2+b\lambda+c=0\\
&g(x)=\left(b_0+b_1x+b_2x^2+\dots+b_nx^n\right)e^{mx}\\
&G(x)=\left(B_0+B_1x+B_2x^2+\dots+B_nx^n\right)e^{mx}&&\text{$\lambda\neq m$}\\
&G(x)=\left(B_0+B_1x+B_2x^2+\dots+B_nx^n\right)e^{mx}\cdot x^k&&\text{$\lambda = m$}
\end{align*}
\end{boxrightshaded}

\begin{boxleft}\bla{Partikuläre Lösungen(sin und cos)}
\des{G(x)}{Ansatz}\\
\des{g(x)}{Störglied}\\
\des{k}{Anzahl der Resonanzfälle}
\end{boxleft}\begin{boxrightshaded}
\begin{align*}
&a\lambda^2+b\lambda+c=0\\
&g(x)=a\cos\left(kx\right)+b\sin\left(kx\right)\\
&G(x)=A\cos\left(kx\right)+B\sin\left(kx\right)&&\text{$\lambda\neq \pm kj$}\\
&G(x)=A\cos\left(kx\right)+B\sin\left(kx\right)\cdot x^k&&\text{$\lambda = \pm kj$}
\end{align*}
\end{boxrightshaded}



\begin{boxleft}\bla{Partikuläre Lösungen(e, sin und cos)}
\des{G(x)}{Ansatz}\\
\des{g(x)}{Störglied}\\
\des{k}{Anzahl der Resonanzfälle}
\end{boxleft}\begin{boxrightshaded}
\begin{align*}
&a\lambda^2+b\lambda+c=0\\
&g(x)=\left(b_0+b_1x+b_2x^2+\dots+b_nx^n\right)e^{mx}\cdot\left(c\cos\left(kx\right)+d\sin\left(kx\right)\right)\\
&G(x)=\left(B_0+B_1x+B_2x^2+\dots+B_nx^n\right)e^{mx}\cdot\left(C\cos\left(kx\right)+D\sin\left(kx\right)\right)&&\text{$\lambda\neq m \pm kj$}\\
&G(x)=\left(B_0+B_1x+B_2x^2+\dots+B_nx^n\right)e^{mx}\cdot\left(C\cos\left(kx\right)+D\sin\left(kx\right)\right)\cdot x^k&&\text{$\lambda= m \pm kj$}
\end{align*}
\end{boxrightshaded}